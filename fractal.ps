%!PS

/fractal 
{ 
    
    count 1 eq
    {
        1 dict begin
            /num exch def

            /middleX 8.5 2 div 72 mul def       % 72 is about an inch
            /middleY 11 2 div 72 mul def

            /tLength 72 2 mul def
            /tHight 72 2 mul def

            /decNum
            {
                /num num 1 sub def
            }
            def
            
            /tDraw
            {   
                newpath

                    0 0 moveto
                    tLength 0 lineto
                    
                    tLength 2 div tHight lineto

                    0 0 lineto

                    closepath

                fill
            }
            def

            gsave
                1 0 0 setrgbcolor
                middleX middleY translate
                0 0 moveto

                tDraw
                decNum

                .5 .5 scale

                45 rotate
                


                showpage
            grestore
        end
    }
    {
        clear
    }
    ifelse
    
} 
def

1 fractal