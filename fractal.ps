/fractal 
{ 
    count 1 eq
    {
        1 dict begin
            /num exch def
            num 1 ge
            {

                /tLength 72 def
                /tHight 72 def

                /tDraw
                {   
                    newpath
                        0 0 moveto
                        tLength 2 div neg tHight neg lineto
                        tLength 2 div tHight neg lineto
                        0 0 lineto
                        closepath
                    fill
                }
                def

                /decNum { /num num 1 sub def } def

                /tRight
                {
                    gsave
                        tLength 2 div tHight neg translate
                        .5 .5 scale
                        45 rotate
                        tDraw
                        num rFractal
                    grestore
                }
                def

                /tLeft
                {
                    gsave
                        tLength 2 div neg tHight neg translate
                        .5 .5 scale
                        -45 rotate
                        tDraw
                        num rFractal
                    grestore
                }
                def

                /rFractal
                {
                    count 1 eq
                    {
                        1 dict begin
                            /num exch def
                            decNum
                            num 1 ge
                            {
                                tRight
                                
                                tLeft
                            }
                            if
                        end
                    }
                    if
                }
                def

                gsave
                    tDraw
                    num rFractal
                    showpage
                grestore
            }
            if
        end
    }
    if
} 
def