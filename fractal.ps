%!PS

/fractal 
{ 
    count 1 eq
    {
        1 dict begin
            /num exch def
            num 1 ge
            {
                /middleX 8.5 2 div 72 mul def       % 72 is about an inch
                /middleY 11 2 div 72 mul def

                /tLength 72 2 mul def
                /tHight 72 2 mul def

                /decNum
                {
                    /num num 1 sub def
                }
                def
                
                /tDraw
                {   
                    newpath
                        0 0 moveto
                        tLength 0 lineto
                        tLength 2 div tHight lineto
                        0 0 lineto
                        closepath
                    fill
                }
                def

                gsave
                    1 0 0 setrgbcolor
                    middleX middleY translate

                    tDraw
                    decNum

                    % transformations for both
                    .5 .5 scale
                    
                    % transformations for right
                    gsave
                        -45 rotate
                        tLength 2 div 0 translate
                        num fractal
                    grestore

                    % transformations for left
                    gsave
                        45 rotate
                        middleX middleY translate
                        num fractal
                    grestore

                    showpage
                grestore
            }
            if
        end
    }
    if
} 
def